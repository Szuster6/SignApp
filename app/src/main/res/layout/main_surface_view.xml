<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <com.example.mklos.signapp.CustomSufaceView
                android:id="@+id/main_surface_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                opencv:camera_id="any" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="false" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min_treshold"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSave"
                    android:layout_below="@+id/logo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="103dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send SMS"
                    android:id="@+id/send_sms"
                    android:layout_below="@+id/logo"
                    android:layout_alignParentStart="true"
                    android:onClick="sendMessage2" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:textColor="@android:color/holo_green_light"
                android:layout_centerVertical="true"
                android:textSize="36sp"
                android:layout_toRightOf="@+id/text5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:textColor="@android:color/holo_green_light"
                android:layout_centerVertical="true"
                android:textSize="36sp"
                android:layout_toRightOf="@+id/text4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:textColor="@android:color/holo_green_light"
                android:layout_centerVertical="true"
                android:textSize="36sp"
                android:layout_toRightOf="@+id/text3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"

                android:layout_centerVertical="true"

                android:textColor="@android:color/holo_green_light"
                android:id="@+id/text3"
                android:layout_toRightOf="@+id/text2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_centerVertical="true"

                android:id="@+id/text2"
                android:layout_toRightOf="@+id/text1"
                android:textColor="@android:color/holo_green_light" /><![CDATA[
                android:id="@+id/textView4" />

            android:id="@+id/textView5" />



            ]]>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                tools:textColor="@android:color/holo_green_light"
                android:id="@+id/text1" /><![CDATA[
                android:id="@+id/textView6" />

            ]]>

            <TextView
                android:id="@+id/numberOfFingers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingRight="20dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="115dp"
                android:textColor="#ff0000"/>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="30000"
                android:layout_alignTop="@+id/logo"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#444ce4"
                android:id="@+id/background"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:id="@+id/buttonStart"
                    android:layout_marginBottom="57dp"
                    android:onClick="sendMessage1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    android:src="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number"
                    android:hint="Enter Phone Number"
                    android:phoneNumber="true"
                    android:textColorHint="@color/abc_primary_text_material_dark"
                    android:layout_above="@+id/buttonStart"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>